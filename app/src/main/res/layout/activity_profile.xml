<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.Profile">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/colorPrimaryDark">
        <ImageView
            android:id="@+id/iv_btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/back_arrow"
            android:padding="12dp"
            android:contentDescription="@string/todo" />
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:padding="12dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:fontFamily="@font/raleway_medium"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/tv_btn_update"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="@string/update"
            android:padding="12dp"
            android:layout_weight="1.5"
            android:layout_gravity="center"
            android:gravity="end"
            android:fontFamily="@font/raleway_medium"
            android:textColor="@color/white"/>
    </LinearLayout>
    <FrameLayout
        android:layout_width="210dp"
        android:layout_height="210dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_profile_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@mipmap/profile_img"
            app:civ_border_color="@color/colorPrimaryDark"
            app:civ_border_width="3dp" />
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_btn_camera"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="bottom|end"
            android:src="@mipmap/profile_camera_img" />
    </FrameLayout>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">
        <EditText
            android:id="@+id/tv_profile_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:drawableEnd="@mipmap/pencil_img"
            android:textColor="@color/black"
            android:background="@color/white"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:fontFamily="@font/raleway_medium"/>
    </android.support.v7.widget.CardView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/dark_gray"
        android:textSize="14sp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="@string/this_is_not_your_username_or_pin_This_name_will_be"
        android:fontFamily="@font/raleway_regular"/>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/about_and_phone_number"
                android:textSize="18sp"
                android:textColor="@color/colorPrimaryDark"
                android:padding="10dp"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/raleway_medium"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginEnd="10dp">
                <TextView
                    android:id="@+id/tv_aboutus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_weight="1"
                    android:text="@string/At_work"
                    android:textColor="@color/black"
                    android:padding="10dp"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/raleway_medium"/>
                <TextView
                    android:id="@+id/tv_select_aboutus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:layout_weight="1.5"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:background="@drawable/btn_profile_name"
                    android:text="@string/select_aboutus"
                    android:textColor="@color/white"
                    android:padding="10dp"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/raleway_medium"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/number"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:padding="10dp"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/opensans_regular"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>