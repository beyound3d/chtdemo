<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.PrivacySettings">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        tools:ignore="UselessParent">
        <ImageView
            android:id="@+id/iv_btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/back_arrow"
            android:contentDescription="@string/todo" />
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:fontFamily="@font/raleway_medium"
            android:padding="10dp"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="50dp"
            android:textColor="@color/white"/>

    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20sp"
            android:layout_marginStart="20dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/who_can_see_my_personal_info"
                android:textAllCaps="true"
                android:fontFamily="@font/raleway_semibold"
                android:textSize="18sp"
                android:textColor="@color/dark_gray"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.7dp"
                android:layout_marginTop="5dp"
                android:background="@color/gray"/>
            <LinearLayout
                android:id="@+id/ll_last_seen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="15dp"
                android:paddingBottom="15dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/last_seen"
                    android:fontFamily="@font/raleway_medium"
                    android:textSize="16sp"
                    android:textColor="@color/black"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/everyone"
                    android:fontFamily="@font/raleway_medium"
                    android:textSize="14sp"
                    android:paddingTop="2dp"
                    android:textColor="@color/dark_gray"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:background="@color/gray"/>
            <LinearLayout
                android:id="@+id/ll_profile_photo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="15dp"
                android:paddingBottom="15dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/profile_photo"
                    android:fontFamily="@font/raleway_medium"
                    android:textSize="16sp"
                    android:textColor="@color/black"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/everyone"
                    android:fontFamily="@font/raleway_medium"
                    android:textSize="14sp"
                    android:paddingTop="2dp"
                    android:textColor="@color/dark_gray"/>
        </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:background="@color/gray"/>
            <LinearLayout
                android:id="@+id/ll_about"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="15dp"
                android:paddingBottom="15dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/about"
                    android:fontFamily="@font/raleway_medium"
                    android:textSize="16sp"
                    android:textColor="@color/black"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/everyone"
                    android:fontFamily="@font/raleway_medium"
                    android:textSize="14sp"
                    android:paddingTop="2dp"
                    android:textColor="@color/dark_gray"/>
        </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:background="@color/gray"/>
            <LinearLayout
                android:id="@+id/ll_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="15dp"
                android:paddingBottom="15dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/status"
                    android:fontFamily="@font/raleway_medium"
                    android:textSize="16sp"
                    android:textColor="@color/black"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/everyone"
                    android:fontFamily="@font/raleway_medium"
                    android:textSize="14sp"
                    android:paddingTop="2dp"
                    android:textColor="@color/dark_gray"/>
        </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:background="@color/gray"/>
            <LinearLayout
                android:id="@+id/ll_live_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="15dp"
                android:paddingBottom="15dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/live_location"
                    android:fontFamily="@font/raleway_medium"
                    android:textSize="16sp"
                    android:textColor="@color/black"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/none"
                    android:fontFamily="@font/raleway_medium"
                    android:textSize="14sp"
                    android:paddingTop="2dp"
                    android:textColor="@color/dark_gray"/>
        </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/if_you_donot_share_your_lastseen_you_wont_be_able_to_see_other_peoples_last_seen"
                android:fontFamily="@font/raleway_medium"
                android:textSize="14sp"
                android:layout_marginTop="15dp"
                android:padding="10dp"
                android:background="@color/colorPrimary1"
                android:textColor="@color/white"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/messaging"
                android:textAllCaps="true"
                android:fontFamily="@font/raleway_semibold"
                android:textSize="18sp"
                android:layout_marginTop="20dp"
                android:textColor="@color/dark_gray"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.7dp"
                android:layout_marginTop="5dp"
                android:background="@color/gray"/>
            <LinearLayout
                android:id="@+id/ll_blocked_contact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="15dp"
                android:paddingBottom="15dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/blocked_contacts_none"
                    android:fontFamily="@font/raleway_medium"
                    android:textSize="16sp"
                    android:paddingTop="15dp"
                    android:textColor="@color/black"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/list_of_contacts_that_you_have_blocked"
                    android:fontFamily="@font/raleway_medium"
                    android:textSize="14sp"
                    android:paddingTop="2dp"
                    android:textColor="@color/dark_gray"/>
        </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:background="@color/gray"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/read_receipts"
                    android:fontFamily="@font/raleway_medium"
                    android:textSize="16sp"
                    android:paddingTop="15dp"
                    android:layout_weight="1"
                    android:textColor="@color/black"/>
                <CheckBox
                    android:id="@+id/check_read_reciept"
                    android:theme="@style/CheckBoxStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"
                    android:fontFamily="@font/opensans_regular"
                    android:checked="false"/>

            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/if_you_turn_off_read_receipts_you_wonot_be_able_to_see_read_receipts_from_other_pepole_read_receipts_are_always_sentfor_group_chats"
                android:fontFamily="@font/raleway_medium"
                android:textSize="14sp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:padding="10dp"
                android:background="@color/colorPrimary1"
                android:textColor="@color/white"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>